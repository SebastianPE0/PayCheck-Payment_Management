<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validar Comprobante"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvReferenciaAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referencia: 000000"
            android:textSize="16sp"
            android:textColor="#475569"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E2E8F0"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivComprobanteAdmin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="#F8FAFC"
                android:contentDescription="Imagen del comprobante" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRechazarPago"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rechazar"
                android:textColor="#DC2626"
                app:strokeColor="#DC2626"
                android:layout_marginEnd="8dp"/> <Button
            android:id="@+id/btnAprobarPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aprobar"
            android:backgroundTint="#16A34A"
            android:layout_marginStart="8dp"/> </LinearLayout>

    </LinearLayout>
</ScrollView>